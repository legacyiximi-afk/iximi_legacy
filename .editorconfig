# EditorConfig - https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{js,ts}]
indent_size = 2
curly_bracket_same_line = true

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[*.{diff,md}]
trim_trailing_whitespace = false
